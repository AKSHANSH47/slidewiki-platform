{
  "name": "slidewiki-platform",
  "description": "A Platform for Collaborative OpenCourseWare Authoring",
  "keywords": [
    "E-Learinng",
    "OpenCourseWare",
    "Presentations",
    "Authoring"
  ],
  "version": "2.0.0",
  "private": false,
  "repository": {
    "type": "git",
    "url": "https://github.com/slidewiki/slidewiki-platform"
  },
  "bugs": "https://github.com/slidewiki/slidewiki-platform/issues",
  "engines": {
    "node": "5.6.x"
  },
  "main": "start.js",
  "scripts": {
    "clean": "rm -rf build/ coverage/",
    "build": " npm run lint && webpack --config webpack.config.production.js && NODE_ENV=production npm start",
    "dev": "node webpack-dev-server.js",
    "lint": "eslint ./**/*.js",
    "test": "mocha tests/unit/ --recursive --compilers js:babel/register --reporter spec",
    "coverage": "istanbul cover _mocha --include-all-sources tests/unit/*.js",
    "coverall": "npm run coverage && #cat ./coverage/lcov.info | coveralls && rm -rf ./coverage",
    "countLOC": "sloc -f cli-table -k total,source,comment,empty -e node_modules\\|coverage\\|.git ./",
    "countLOC:details": "sloc -f cli-table -d -e node_modules\\|coverage\\|.git ./",
    "start:watch": "nodemon"
  },
  "dependencies": {
    "async": "^1.5.2",
    "babel": "^5.8.23",
    "babel-core": "^5.8.25",
    "body-parser": "^1.6.4",
    "compression": "^1.5.1",
    "cookie-parser": "^1.3.3",
    "csurf": "^1.6.3",
    "debug": "^2.0.0",
    "express": "^4.13.4",
    "express-state": "^1.2.0",
    "fluxible": "^1.0.3",
    "fluxible-addons-react": "^0.2.0",
    "fluxible-plugin-fetchr": "^0.3.9",
    "fluxible-router": "^0.4.0",
    "react": "^0.14.0",
    "react-dom": "^0.14.0",
    "serialize-javascript": "^1.0.0",
    "serve-favicon": "^2.3.0"
  },
  "devDependencies": {
    "babel-eslint": "^4.1.8",
    "babel-loader": "^5.1.3",
    "bundle-loader": "^0.5.0",
    "chai": "^3.5.0",
    "coveralls": "^2.11.6",
    "eslint": "^1.10.3",
    "eslint-plugin-react": "^3.16.1",
    "istanbul": "^0.4.2",
    "jsdom": "^8.0.2",
    "json-loader": "^0.5.1",
    "mocha": "^2.4.5",
    "nodemon": "^1.2.1",
    "react-hot-loader": "^1.2.8",
    "shelljs": "^0.5.3",
    "sloc": "^0.1.10",
    "webpack": "^1.12.4",
    "webpack-dev-server": "^1.6.5"
  }
}
